<?xml version="1.0" encoding="UTF-8"?>
<window>
	<backgroundcolor>00X000000</backgroundcolor>
	<defaultcontrol always="true">8000</defaultcontrol>
	<controls>
	<control type="group">
	<animation type="WindowOpen">
        <effect type="fade" start="0" end="100" time="100"/>
    </animation>
	<animation type="WindowClose">
        <effect type="fade" start="100" end="0" time="100"/>
    </animation>	
	<include content="masque_fond"></include>	
	<control type="group">
		<centertop>50%</centertop>
		<centerleft>50%</centerleft>
		<height>926</height>																													<description>((60 + 1) * nombre de boutons) + 18</description>	
		<width>1850</width>		
	<control type="image">
		<aspectratio>scale</aspectratio>
		<texture colordiffuse="$VAR[1dialogue_panneau]">texture.png</texture>
		<bordertexture border="10">fenetres/tuiles.png</bordertexture>
		<bordersize>10,0,10,10</bordersize>
	</control>	
	<control type="label" id="1">																												<description>titre de la fenetre</description>
		<centerleft>50%</centerleft>
		<width>670</width>
		<height>126</height>
		<font>textbox</font>
		<textcolor>$VAR[1dialogue_titre]</textcolor>
		<align>center</align>
		<aligny>center</aligny>
		<scroll>true</scroll>
	</control>	
	<control type="group">
		<top>100</top>
		<left>14</left>
		<right>14</right>
		<bottom>14</bottom>			
	<control type="textbox" id="5">																												<description>texte</description>
		<top>0</top>
		<left>20</left>
		<right>20</right>
		<bottom>55</bottom>
		<font>texte_moyen</font>		
		<textcolor>$VAR[1dialogue_titre]</textcolor>
		<align>left</align>
		<aligny>top</aligny>
		<pagecontrol>60</pagecontrol>
		<autoscroll>false</autoscroll>
	</control>
	<control type="image">           																											<description>separation gauche</description>
		<top>-2</top>
		<bottom>53</bottom>
		<right>4</right>
		<width>1</width>
		<aspectratio>scale</aspectratio>
		<texture colordiffuse="ff808080">texture.png</texture>	
	</control>
	<control type="scrollbar" id="60">																											<description>image scrollbar</description>
		<top>0</top>
		<bottom>55</bottom>
		<right>2</right>
		<width>5</width>		
		<onleft>8000</onleft>
		<onright>8000</onright>
		<texturesliderbackground></texturesliderbackground>		
		<texturesliderbar colordiffuse="00ffffff">texture.png</texturesliderbar>
		<textureslidernib colordiffuse="00ffffff">texture.png</textureslidernib>
		<texturesliderbarfocus colordiffuse="ffffffff">texture.png</texturesliderbarfocus>
		<textureslidernibfocus colordiffuse="$VAR[1dialogue_bouton_focus]">texture.png</textureslidernibfocus>
		<showonepage>false</showonepage>		
	</control>	
	<control type="grouplist" id="8000">																										<description>liste boutons</description>	
		<bottom>0</bottom>
		<height>40</height>
		<right>0</right>
		<left>0</left>
		<align>center</align>
		<itemgap>10</itemgap>		
		<orientation>horizontal</orientation>			
	<control type="button" id="10">																												<description>bouton fermer</description>			
		<width>auto</width>
		<height>40</height>		
		<align>center</align>
		<aligny>center</aligny>
		<label>Fermer</label>
		<onclick>close</onclick>
		<onup>60</onup>
	<include content="dialogue_bouton"></include>
	</control>	
	</control>
	
	
	
	</control>	
	</control>
	</control>	
</controls>
</window>